generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Key {
  id              String   @id @unique
  user_id         String
  hashed_password String
  primary         Boolean
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [user_id], references: [id])
}

model User {
  id         String   @id @unique
  email      String?
  name       String
  studentsId Int
  schoolId   String
  point      Int
  level      Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Keys       Key[]
  school     School   @relation(fields: [schoolId], references: [id])
}

model School {
  id             String @id @unique
  schoolName     String
  schoolLocation String
  users          User[]
}

model product {
  id          Int      @id @default(autoincrement())
  name        String
  imgURL      String?
  description String?
  published   Boolean
  amount      Int
  price       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
